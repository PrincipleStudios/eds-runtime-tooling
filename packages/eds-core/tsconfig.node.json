{
	"compilerOptions": {
		"allowJs": true,
		"composite": true,
		"skipLibCheck": true,
		"noEmit": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"outDir": "./dev-dist/node"
	},
	"include": ["*.ts", "*.mts", "*.cts", ".*.cjs", "scripts"],
	"exclude": ["src"]
}
