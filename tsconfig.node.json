{
	"compilerOptions": {
		"allowJs": true,
		"composite": true,
		"skipLibCheck": true,
		"noEmit": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true
	},
	"include": ["*.ts", "*.mts", "*.cts", ".*.cjs", "scripts"],
	"exclude": ["packages"]
}
